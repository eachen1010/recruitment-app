generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EmailTemplateDummy {
  id        Int       @id @default(autoincrement())
  content   String?
  author    String?
  createdAt DateTime? @db.Timestamptz(6)
  title     String    @unique
}

model candidates {
  cid           Int     @unique @default(autoincrement())
  year          Int?
  first_name    String?
  last_name     String?
  major         String?
  roles_applied String?
  availability  String?
  email         String
  roles         roles?

  @@id([cid, email])
}

model leads {
  lid          Int     @default(autoincrement())
  email        String
  name         String
  role         String?
  availability String?

  @@id([lid, email])
}

model roles {
  rid        Int        @id @default(autoincrement())
  lid        Int?
  candidates candidates @relation(fields: [rid], references: [cid], onDelete: NoAction, onUpdate: NoAction, map: "role")
}
